<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.1.0/masonry.pkgd.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">



<div id="masonry-grid">
{{#each products}}
  
    <div class= "mycard" style = "width: 200px; border:solid 1px #eee">
      <img src={{imageUri}} alt="Card image cap" style="width:80%;max-width:200px;border:solid 1px #eee;">
      <div>
      <a href="/cart/add/{{_id}}" class="btn btn-primary">Add to cart</a>
        <p>{{title}}</p>
        <p>{{description}}</p>
      </div>
    </div>

{{/each}}

</div>
<!-- looks for elements before they're on page if at the top -->
<script> 
var container = $('#masonry-grid');
container.masonry({
  columnWidth: 80,
  itemSelector: '.mycard'
});
</script>